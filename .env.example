# =====================================================
# CONFIGURACION GENERAL
# =====================================================
# Zona horaria del servidor
TZ=America/Mexico_City

# Ruta para datos persistentes
DATA_PATH=./stack_data

# =====================================================
# RED DOCKER
# =====================================================
# Nombre de la red externa (debe existir)
NETWORK_NAME=vpn-proxy

# =====================================================
# DOCKGE - Gestor de Stacks
# =====================================================
# Puerto para acceso web a Dockge
DOCKGE_PORT=8080

# Directorio donde se encuentran los stacks de Docker Compose
DOCKGE_STACKS_DIR=/opt/stacks

# =====================================================
# DOZZLE - Visor de Logs
# =====================================================
# Nivel de log: trace, debug, info, warn, error, fatal
DOZZLE_LEVEL=info

# =====================================================
# PORTAINER - Gestion de Docker
# =====================================================
# Portainer no requiere configuracion adicional
# El primer acceso pedira crear usuario admin

# =====================================================
# DOCKMON - Monitor de Contenedores
# =====================================================
# Puerto HTTPS para acceso web a Dockmon
DOCKMON_PORT=8443
